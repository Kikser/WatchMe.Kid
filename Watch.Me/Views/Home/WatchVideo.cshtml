@{
    ViewBag.Title = "WatchVideo";
}

@model Watch.Me.Models.ViewModels.WatchVideoViewModel

<link href="~/Content/video.css" rel="stylesheet" />
<link href="~/Content/search.css" rel="stylesheet" />
<link href="~/Content/comments.css" rel="stylesheet" />
<link href="~/Content/multiPlayers.css" rel="stylesheet" />
<div class="sub_nav">
    <div class="listi">
        <ul>
            <li class="active"><a href="#modern">Popular</a></li>
            <li><a href="#oldSkool">Recommended</a></li>
            <li><a href="#oldSkool">Recently Uploaded</a></li>
        </ul>
    </div>
    <div class='search'>
        <div class='search-container'>
            <input placeholder='search' type='text'>
            <a class='button'>
                <i class='icon-search'></i>
            </a>
        </div>
    </div>
</div>
<div class="wrapper_left_video">

    <div class="well">
        <iframe frameborder="0" src="@Model.Url"></iframe>
    </div>

    <div class="video_stuff">
        <div class="video_title">
            <h3>@Model.VideoTitle</h3> @*--------- > tuka treba da se zeme id od title na videoto i da se prikaze*@
            <p>
                Tags are here:
                @foreach (var item in Model.Tags)
                {
                    <label>@item.TagDescription</label>
                }
            </p>
        </div>
        <div class="like">
            <i id="lik"></i>
            <span id="likk">liked!</span>
            
            @Model.NumberLike
        </div>
        <div class="dislike">
            <i id="dis"></i>
            <span id="diss">disliked!</span>
            @Model.NumberDislike
        </div>
        <button class='bubble'>
            <p>Add Comment</p>
        </button>
    </div>

    <div class='comments'>
        <div class='loader'></div>
        <div class='inner'>
            <div class='add-new'>
                <textarea class='input your-msg' placeholder='Type your comment here...'></textarea>
                <button class='send-msg send'>
                    <p>Send</p>
                </button>
            </div>
           
        </div>
    </div>
</div>

<div class="wrapper_right_multiple">
    <div class="wrapper_right_multiple_content">
        @*@Html.Partial('_MultipleVideos')*@

        @foreach (var item in Model.SideVideos)
        {
            <div class="one_video effect1 hidden">
                <div data-aspect-ratio="16:9" class="moreVideo ">
                    <iframe id="ytplayer" type="text/html" src="@item.Url"
                            frameborder="0" autoplay="false"></iframe>
                </div>
                <div class="info_video">
                    <div id="title">
                        <div id="title_frame"></div>
                        <h3>@Html.ActionLink(@item.VideoTitle, "Index", "WatchVideo", new { videoId = item.Id }, new { @class = "navbar-brand" })</h3>
                    </div>
                    <div id="tag_video">
                        @foreach (var tag in item.Tags)
                        {
                            <p>@tag.TagDescription</p>
                        }
                    </div>
                </div>
            </div>
        }
        



            @*@Html.ActionLink(@item.VideoTitle, "Index", "WatchVideo", new { videoId = item.Id }, new { @class = "navbar-brand" })*@



