@{
    ViewBag.Title = "WatchVideo";
}

@model Watch.Me.Models.ViewModels.WatchVideoViewModel

<link href="~/Content/video.css" rel="stylesheet" />
<link href="~/Content/search.css" rel="stylesheet" />
<link href="~/Content/comments.css" rel="stylesheet" />
<link href="~/Content/multiPlayers.css" rel="stylesheet" />
<div class="sub_nav">
    <div class="listi">
        <ul>
            <li class="active"><a href="#modern">Popular</a></li>
            <li><a href="#oldSkool">Recommended</a></li>
            <li><a href="#oldSkool">Recently Uploaded</a></li>
        </ul>
    </div>
    <div class='search'>
        <div class='search-container'>
            <input placeholder='search' type='text'>
            <a class='button'>
                <i class='icon-search'></i>
            </a>
        </div>
    </div>
</div>
<div class="wrapper_left_video">

    <div class="well">
        <iframe frameborder="0" src="@Model.Url"></iframe>
    </div>

    <div class="video_stuff">
        <div class="video_title">
            <h3>@Model.VideoTitle</h3> @*--------- > tuka treba da se zeme id od title na videoto i da se prikaze*@
            <p>
                Tags are here:
                @foreach (var item in Model.Tags)
                {
                    <label>@item.TagDescription</label>
                }
            </p>
        </div>
        <div class="like">
            <i id="lik"></i>
            <span id="likk">liked!</span>
            
            @Model.NumberLike
        </div>
        <div class="dislike">
            <i id="dis"></i>
            <span id="diss">disliked!</span>
            @Model.NumberDislike
        </div>
        <button class='bubble'>
            <p>Add Comment</p>
        </button>
    </div>

    <div class='comments'>
        <div class='loader'></div>
        <div class='inner'>
            <div class='add-new'>
                <textarea class='input your-msg' placeholder='Type your comment here...'></textarea>
                <button class='send-msg send'>
                    <p>Send</p>
                </button>
            </div>
           
        </div>
    </div>
</div>

<div class="wrapper_right_multiple">
    <div class="wrapper_right_multiple_content">
            @*@Html.Partial('_MultipleVideos')*@
            </div>
        </div>
   
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
<script src="~/Scripts/comments.js"></script>
<script>
    $(function() {
        $("#lik").click(function() {
            $("#lik,#likk").toggleClass("press", 1000);
        });
        $("#dis").click(function() {
            $("#dis,#diss").toggleClass("press", 1000);
        });
    });
</script>
<script>
    $('.bubble').click(function () {
        $('.comments').slideToggle('slow');
            return false;
      });

</script>