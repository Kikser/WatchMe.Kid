<script>
            $(function() {
                $("#lik").click(function() {
                    $("#lik,#likk").toggleClass("press", 1000);
                });
                $("#dis").click(function() {
                    $("#dis,#diss").toggleClass("press", 1000);
                });
            });
        </script>
        <script>
            $('.bubble').click(function() {
                $('.comments').slideToggle('slow');
                return false;
            });

        </script>
    <script>
        function showMore() {
            $('.hidden:lt(4)').removeClass('hidden');
        };

        $(document).ready(function () {
            $('.hidden:lt(4)').removeClass('hidden');
            $('#show-more').on('click', showMore);
        });
    </script>
