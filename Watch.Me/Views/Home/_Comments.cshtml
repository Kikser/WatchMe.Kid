@model Watch.Me.Models.ViewModels.WatchVideoViewModel


@Html.HiddenFor(m => m.Id, new { id = "videoId" })

<div class='comments'>
    <div class="detailBox">
        <div class="titleBox">
            <label>Comment Box</label>

        </div>

        <div class="actionBox">
            <ul class="commentList">

                @foreach (var item in Model.Comments)
                {
                    <li>
                        <div class="commenterImage">
                            <img src="@item.UserPicture" />
                        </div>
                        <div class="commentText">
                            <p class="">@item.CommentText</p> 
                            <span class="date sub-text">@item.DateCreated</span>

                        </div>
                    </li>
                }

            </ul>
            <form class="form-inline" role="form">
                <div class="form-group">
                    @if (Request.IsAuthenticated)
                    {
                        <input class="form-control" id="add_comment" type="text" placeholder="Add Comment" />
                    }
                    
                </div>
                <div class="form-group">
                    @if (Request.IsAuthenticated)
                    {
                        <input type="button" id="insertComment" value="Add" />
                    }
                    

                    @*<button id="insertComment">Add</button>*@
                    @*<button class="btn btn-default" id="insertComment">Add</button>*@
                </div>
            </form>
        </div>
    </div>

</div>

