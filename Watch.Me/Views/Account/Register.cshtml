@model Watch.Me.Models.RegisterViewModel

<link href="~/Content/register.css" rel="stylesheet" />

<div class="register_container" data-position="1">
    <div id="animated-example" class="animated fadeInLeftBig">
        <img src="~/images/fade.png" id="monk" />
    </div>
    
    @*<p class="speech">Register or....</p>*@
    <div id="animated-example" class="animated fadeInRightBig">
        <div class="register">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
                @Html.AntiForgeryToken()
                <div id="reg_form">
                    <h4 class="form_title">Register now !!!</h4>

                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", @id = "label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @id = "label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", @id = "label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    <div class="check">
                        @Html.LabelFor(m => m.Male, new { @class = "col-md-2 control-label", @id = "gender" })
                        @Html.RadioButtonFor(model => model.Gender, true, new { @class = "form-control", @id = "checkBox" })

                        @Html.LabelFor(m => m.Female, new { @class = "col-md-2 control-label", @id = "gender" })
                        @Html.RadioButtonFor(m => m.Gender, true, new { @class = "form-control", @id = "checkBox" })
                    </div>
    <input type="submit" class="button" value="Register" />




            </div>

        }

        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
