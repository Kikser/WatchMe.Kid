@model IEnumerable<Watch.Me.Models.ViewModels.ApproveVideoViewModel>

@{
    ViewBag.Title = "UnApprovedVideoes";
    Layout = "~/Views/Admin/_AdminMaster.cshtml";
}

<h2>Unapproved videoes</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VideoTitle)
        </th>
        
        <th width="200px">
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th width="200px">
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            Tags
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model) {
    <tr>
        <td>
            <a href="@item.Url">
                @item.VideoTitle
            </a>          
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>

        <td>
            @if (item.Tags != null)
            {
                foreach (var tag in item.Tags)
                {

                    <p>@tag.TagDescription</p>
                }
            }
            
            @Html.ActionLink("Manage Tags", "ApproveTag", new {videoId = item.Id})
        </td>

        <td>
            @Html.ActionLink("Approve", "ApproveVideo", new { videoId = item.Id }) 
        </td>
    </tr>
}

</table>
